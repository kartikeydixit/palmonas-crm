## Docker compose defaults
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=rootpassword

## Auth secrets (change in real deployments)
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh

## Allowed origins for browser access (comma-separated)
CORS_ORIGINS=http://localhost:5173

## Feature flags (comma-separated keys), e.g. "SYNC_ENABLED,MOCK_FAILURES"
FEATURE_FLAGS=SYNC_ENABLED

## Rate limiting
RATE_LIMIT_MAX=300

